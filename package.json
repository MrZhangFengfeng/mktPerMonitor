{
    "name": "per-moniteur",
    "version": "0.0.1",
    "description": "一个方便获取各类性能指标及 Web Vitals 的库",
    "main": "dist/index.js",
    "scripts": {
      "test": "jest",
      "clean": "rm -rf ./dist",
      "dev": "tsc -w",
      "build": "tsc ./src/index",
      "check-types": "tsc --noEmit",
      "check-formatting": "prettier --check '**/*.{js,json,md,tsx,ts}'"
    },
    "keywords": ["web", "performance"],
    "author": "zhangxuefeng",
    "license": "MIT",
    "devDependencies": {
      "@commitlint/cli": "^11.0.0",
      "@commitlint/config-conventional": "^11.0.0",
      "@types/jest": "^26.0.19",
      "@types/node": "^14.14.22",
      "@types/tti-polyfill": "^0.2.0",
      "eslint": "^7.15.0",
      "eslint-plugin-prettier": "^3.3.0",
      "husky": "^4.3.6",
      "jest": "^26.6.3",
      "lint-staged": "^10.5.3",
      "prettier": "^2.2.1",
      "ts-jest": "^26.4.4",
      "typescript": "^4.1.3"
    },
    "files": ["dist"],
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "*.{js,json,md,tsx,ts}": [
        "prettier --write",
        "git add"
      ]
    },
    "dependencies": {
      "tti-polyfill": "^0.2.2"
    }
  }